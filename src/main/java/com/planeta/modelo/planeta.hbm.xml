<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.planeta.modelo.Planeta" table="planeta">
        <id name="id" type="long">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="nome" type="java.lang.String">
            <column name="nome" />
        </property>
        <property name="clima" type="java.lang.String">
            <column name="clima" />
        </property>
        <property name="terreno" type="java.lang.String">
            <column name="terreno" />
        </property>
    </class>
</hibernate-mapping>

<!-- MAPEAMENTO USADI APENAS PARA POPULAR O BANCO COM OS DADOS DA API SWAPI A API de Guerra nas Estrelas -->